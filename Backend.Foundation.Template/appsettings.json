{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Persistence": {
    "Provider": "None"
  },
  "Authentication": {
    "Enabled": false,
    "Authority": "",
    "RequireHttpsMetadata": true,
    "NameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier",
    "RoleClaimType": "http://schemas.microsoft.com/ws/2008/06/identity/claims/role",
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ClockSkewSeconds": 30,
    "Audiences": []
  },
  "AuthorizationMapping": {
    "KeycloakRealmAccessClaimType": "realm_access",
    "KeycloakResourceAccessClaimType": "resource_access",
    "IncludeKeycloakRealmRoles": true,
    "IncludeKeycloakClientRoles": true,
    "KeycloakClientRoleClients": [],
    "RoleClaimTypes": [
      "http://schemas.microsoft.com/ws/2008/06/identity/claims/role",
      "role",
      "roles"
    ],
    "PermissionClaimTypes": [
      "permission",
      "permissions",
      "scope",
      "scp"
    ],
    "RolePermissions": {}
  },
  "ConnectionStrings": {
    "DefaultConnection": "",
    "Postgres": "Host=localhost;Port=5432;Database=<database>;Username=<username>;Password=<password>",
    "Mongo": ""
  },
  "Mongo": {
    "Database": "BackendFoundationTemplate"
  },
  "Redis": {
    "Enabled": false,
    "ConnectionString": "localhost:6379",
    "InstancePrefix": "backend.foundation.template",
    "DefaultTtlSeconds": 300,
    "ConnectTimeoutMs": 5000
  },
  "Messaging": {
    "Provider": "None",
    "RabbitMq": {
      "HostName": "localhost",
      "Port": 5672,
      "VirtualHost": "/",
      "UserName": "<username>",
      "Password": "<password>",
      "ExchangeName": "backend.foundation.events",
      "ExchangeType": "topic",
      "DefaultRoutingKey": "integration.event",
      "ClientProvidedName": "backend-foundation-template",
      "AutomaticRecoveryEnabled": true,
      "NetworkRecoveryIntervalSeconds": 10,
      "ConsumerEnabled": false,
      "ConsumerQueueName": "backend.foundation.integration",
      "ConsumerRoutingKeys": [
        "#"
      ],
      "ConsumerPrefetchCount": 1,
      "ConsumerIdempotencyTtlHours": 24,
      "DeadLetterExchangeName": "backend.foundation.events.dlx",
      "DeadLetterQueueName": "backend.foundation.integration.dlq",
      "DeadLetterRoutingKey": "dead.letter"
    },
    "Outbox": {
      "Enabled": true,
      "BatchSize": 50,
      "PollIntervalSeconds": 5,
      "LockTimeoutSeconds": 30,
      "MaxRetryCount": 10,
      "BaseBackoffSeconds": 5,
      "MaxErrorLength": 1024
    }
  },
  "AllowedHosts": "*"
}
