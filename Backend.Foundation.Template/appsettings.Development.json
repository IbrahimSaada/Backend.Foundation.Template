{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"Persistence": {
		"Provider": "Postgres"
	},
	"Authentication": {
		"Enabled": true,
		"Authority": "http://localhost:8088/realms/foundation-template",
		"RequireHttpsMetadata": false,
		"NameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier",
		"RoleClaimType": "http://schemas.microsoft.com/ws/2008/06/identity/claims/role",
		"ValidateIssuer": true,
		"ValidateAudience": false,
		"ValidateLifetime": true,
		"ClockSkewSeconds": 30,
		"Audiences": []
	},
	"AuthorizationMapping": {
		"KeycloakRealmAccessClaimType": "realm_access",
		"KeycloakResourceAccessClaimType": "resource_access",
		"IncludeKeycloakRealmRoles": true,
		"IncludeKeycloakClientRoles": false,
		"KeycloakClientRoleClients": [],
		"RoleClaimTypes": [
			"http://schemas.microsoft.com/ws/2008/06/identity/claims/role",
			"role",
			"roles"
		],
		"PermissionClaimTypes": [
			"permission",
			"permissions",
			"scope",
			"scp"
		],
		"RolePermissions": {
			"admin": [
				"system.time.read",
				"system.time.cache.invalidate",
				"products.create"
			],
			"user": [
				"system.time.read"
			],
			"moderator": [
				"system.time.read"
			]
		}
	},
	"ConnectionStrings": {
		"DefaultConnection": "",
		"Postgres": "Host=localhost;Port=5432;Database=testing;Username=postgres;Password=ibrahim",
		"Mongo": ""
	},
	"Mongo": {
		"Database": "BackendFoundationTemplate"
	},
	"Redis": {
		"Enabled": true,
		"ConnectionString": "localhost:6379",
		"InstancePrefix": "backend.foundation.template.dev",
		"DefaultTtlSeconds": 300,
		"ConnectTimeoutMs": 5000
	},
	"Transform": "AWS::Serverless-2016-10-31",
	"Resources": {
		"Api": {
			"Type": "AWS::Serverless::Api",
			"Properties": {
				"Name": {
					"Fn::Sub": [
						"${ResourceName} From Stack ${AWS::StackName}",
						{
							"ResourceName": "Api"
						}
					]
				},
				"StageName": "Prod",
				"DefinitionBody": {
					"openapi": "3.0",
					"info": {},
					"paths": {
						"/": {
							"get": {
								"responses": {}
							}
						}
					}
				},
				"EndpointConfiguration": "REGIONAL",
				"TracingEnabled": true
			}
		},
		"UserPool": {
			"Type": "AWS::Cognito::UserPool",
			"Properties": {
				"AdminCreateUserConfig": {
					"AllowAdminCreateUserOnly": false
				},
				"AliasAttributes": [
					"email",
					"preferred_username"
				],
				"UserPoolName": {
					"Fn::Sub": "${AWS::StackName}-UserPool"
				}
			}
		}
	}
}