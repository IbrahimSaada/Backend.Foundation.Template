{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Persistence": {
    "Provider": "Postgres"
  },
  "Authentication": {
    "Enabled": true,
    "Authority": "http://localhost:8080/realms/qooktalk",
    "RequireHttpsMetadata": false,
    "NameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier",
    "RoleClaimType": "http://schemas.microsoft.com/ws/2008/06/identity/claims/role",
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ClockSkewSeconds": 30,
    "Audiences": [
      "admin-client",
      "flutter-login-client",
      "react-login-client",
      "backend-service-client"
    ]
  },
  "AuthorizationMapping": {
    "IncludeKeycloakRealmRoles": true,
    "RoleClaimTypes": [
      "http://schemas.microsoft.com/ws/2008/06/identity/claims/role",
      "role",
      "roles"
    ],
    "PermissionClaimTypes": [
      "permission",
      "permissions",
      "scope",
      "scp"
    ],
    "RolePermissions": {
      "admin": [
        "system.time.read",
        "products.create"
      ],
      "user": [
        "system.time.read"
      ],
      "moderator": [
        "system.time.read"
      ]
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "",
    "Postgres": "Host=localhost;Port=5432;Database=todolist;Username=postgres;Password=ibrahim",
    "Mongo": ""
  },
  "Mongo": {
    "Database": "BackendFoundationTemplate"
  }
}

