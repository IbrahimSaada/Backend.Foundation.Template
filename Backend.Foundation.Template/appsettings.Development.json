{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"Persistence": {
		"Provider": "Postgres"
	},
	"Authentication": {
		"Enabled": true,
		"Authority": "http://localhost:8088/realms/foundation-template",
		"RequireHttpsMetadata": false,
		"NameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier",
		"RoleClaimType": "http://schemas.microsoft.com/ws/2008/06/identity/claims/role",
		"ValidateIssuer": true,
		"ValidateAudience": false,
		"ValidateLifetime": true,
		"ClockSkewSeconds": 30,
		"Audiences": []
	},
	"AuthorizationMapping": {
		"KeycloakRealmAccessClaimType": "realm_access",
		"KeycloakResourceAccessClaimType": "resource_access",
		"IncludeKeycloakRealmRoles": true,
		"IncludeKeycloakClientRoles": false,
		"KeycloakClientRoleClients": [],
		"RoleClaimTypes": [
			"http://schemas.microsoft.com/ws/2008/06/identity/claims/role",
			"role",
			"roles"
		],
		"PermissionClaimTypes": [
			"permission",
			"permissions",
			"scope",
			"scp"
		],
		"RolePermissions": {
			"admin": [
				"system.time.read",
				"system.time.cache.invalidate",
				"products.create"
			],
			"user": [
				"system.time.read"
			],
			"moderator": [
				"system.time.read"
			]
		}
	},
	"ConnectionStrings": {
		"DefaultConnection": "",
		"Postgres": "Host=localhost;Port=5432;Database=testing;Username=postgres;Password=ibrahim",
		"Mongo": ""
	},
	"Mongo": {
		"Database": "BackendFoundationTemplate"
	},
	"Redis": {
		"Enabled": true,
		"ConnectionString": "localhost:6379",
		"InstancePrefix": "backend.foundation.template.dev",
		"DefaultTtlSeconds": 300,
		"ConnectTimeoutMs": 5000
	},
	"Messaging": {
		"Provider": "RabbitMq",
		"RabbitMq": {
			"HostName": "localhost",
			"Port": 5672,
			"VirtualHost": "/",
			"UserName": "guest",
			"Password": "guest",
			"ExchangeName": "backend.foundation.events",
			"ExchangeType": "topic",
			"DefaultRoutingKey": "integration.event",
			"ClientProvidedName": "backend-foundation-template.dev",
			"AutomaticRecoveryEnabled": true,
			"NetworkRecoveryIntervalSeconds": 10,
			"ConsumerEnabled": true,
			"ConsumerQueueName": "backend.foundation.integration.dev",
			"ConsumerRoutingKeys": [
				"#"
			],
			"ConsumerPrefetchCount": 1,
			"ConsumerIdempotencyTtlHours": 24,
			"DeadLetterExchangeName": "backend.foundation.events.dlx.dev",
			"DeadLetterQueueName": "backend.foundation.integration.dlq.dev",
			"DeadLetterRoutingKey": "dead.letter"
		},
		"Outbox": {
			"Enabled": true,
			"BatchSize": 50,
			"PollIntervalSeconds": 5,
			"LockTimeoutSeconds": 30,
			"MaxRetryCount": 10,
			"BaseBackoffSeconds": 5,
			"MaxErrorLength": 1024
		}
	}
}
